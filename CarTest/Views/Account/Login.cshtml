@model CarTest.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


<div class="container">

    <h2>Use a local account to log in.</h2>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    <div class="row col-lg-4">
        <div class="form-group">
            <label for="Brand">Username:</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @maxlength = "100" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div class="form-group">
            <label for="Brand">Password:</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @maxlength = "100" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">

            <input type="submit" value="Log in" />
        </div>
