@model CarTest.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<div class="container">
    <hgroup class="title">
        <h3>@ViewBag.Title. Create a new account.</h3>
    </hgroup>

    @using (Html.BeginForm(new { @class = "" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
  
        <div class="row col-lg-4">
            <div class="form-group">
                <label for="Brand">Username:</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @maxlength = "100" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="form-group">
                <label for="Brand">Password:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @maxlength = "100" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <label for="Brand">Confirm Password:</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @maxlength = "100" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <div class="form-group">
                <input type="submit" value="Register" />
            </div>
        </div>


