@model CarTest.Models.CarModel
@{
    ViewBag.Title = "Upsert";
    Layout = null;
   
}
<form id="frmCar">
    <p id="error_P" style="color:red;"></p>
    @Html.HiddenFor(m => m.CarID)
    <div class="form-group">
        <label for="Brand">Brand:</label>
        @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" ,@maxlength="100"})
        @Html.ValidationMessageFor(m => m.Brand)
    </div>
    <div class="form-group">
        <label for="Model">Model:</label>
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control", @maxlength = "100" })
        @Html.ValidationMessageFor(m => m.Model)
    </div>
    <div class="form-group">
        <label for="Year">Year:</label>
        @Html.TextBoxFor(m => m.Year, new { @class = "form-control", @maxlength = "4" })
        @Html.ValidationMessageFor(m => m.Year)
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @maxlength = "15" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.New, new { })
            @*<input type="checkbox" name="New">  *@ New
        </label>
    </div>
</form>
